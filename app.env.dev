# Variables de entorno para DESARROLLO LOCAL
# Este archivo es seguro para desarrollo, NO contiene credenciales de producción

# Configuración del servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_SHUTDOWN_TIMEOUT=5s
SERVER_READ_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s

# Configuración de la base de datos (PostgreSQL Global Compartido)
DB_HOST=postgres-global
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=pedidos_dev
DB_SSLMODE=disable

# Configuración de JWT (solo para desarrollo)
JWT_SECRET=dev-secret-key-change-in-production-debe-ser-muy-largo-para-seguridad-256-bits
JWT_ACCESS_TOKEN_EXP=15m
JWT_REFRESH_TOKEN_EXP=7d

# Configuración del negocio
BUSINESS_HOURS_START=6
BUSINESS_HOURS_END=20
TIMEZONE=America/Lima

# Configuración de desarrollo
ENV=development
DEBUG=true
LOG_LEVEL=debug

# Configuración de Firebase (opcional para desarrollo)
FIREBASE_PROJECT_ID=exactogas-dev
# FIREBASE_CREDENTIALS_FILE=config/firebase-credentials-dev.json